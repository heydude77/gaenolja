<?xml version="1.0" encoding="UTF-8" ?>
 <!DOCTYPE mapper  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="parcel">
<!-- 
	지금은 테스트 DB로 설정해놈. 나중에 최종적으로 붙일때 DB 테이블 명 변경해야 함.
	현재 DB 테이블 셋팅은 issue 임.
 -->
<!-- 게시글 저장하는거 -->
	<insert id="addByPercel" parameterType="java.util.HashMap">
		insert into parcel values(parcel_seq.nextval, #{title}, #{choice}, #{phone}, #{area}, #{lat}, #{longi}, #{breeds}, #{gender}, #{sort}, #{age}, #{inoculation}, 
									#{content}, #{writer}, sysdate, #{mainimage}, #{file1}, #{file2}, #{character})
	</insert>

<!-- 게시글 전부 뽑는거 -->
	<select id="getAllByPercel" resultType="java.util.HashMap" >
		select * from parcel order by regdate desc
	</select>
	
<!-- 특정 게시글 데이터 뽑는거 -->
	<select id="getByOnePercel" resultType="java.util.HashMap" parameterType="java.lang.Integer">
		select * from parcel where no=#{no}
	</select>
	
</mapper>

